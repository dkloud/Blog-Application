@model BlogArticleCreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>BlogArticle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="BlogArticle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div>
                <input type="file" accept="image/*" asp-for="Image" />
                <span asp-validation-for="Image"></span>
            </div>
            <div class="tags-input" data-name="TagsInput"></div>
            <div>
                <input type="hidden" asp-for="BlogId" value="@ViewBag.BlogId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

